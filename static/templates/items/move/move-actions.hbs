<section class="tab sheet-body {{tabs.actions.cssClass}}" data-tab="actions" data-group="sheet">
    {{#each item.actions as |map type|}}
        {{#if (eq type "attack")}} 
            {{> actions type=type map=map}}
        {{else}}
        {{#unless (eq map.size 0)}}
            {{> actions type=type map=map}}
        {{/unless}}
        {{/if}}
    {{/each}}
</section>

{{#*inline "actions"}}
<div class="actions">
    <header>
        <div class="action-name">Action Name</div>
        <div class="action-controls item-controls">
            <a class="item-control item-create" title="Add {{formatSlug type}}" data-type="action" data-action-type="{{type}}">
                <i class="fas fa-plus-circle" style="margin-right: 3px;"></i>
                <span class="readable">{{localize "ITEM.AddButton"}}</span>
            </a>
        </div>
    </header>
    <content>
        {{#each map as |action slug|}}
            {{log action slug}}
            {{> action action=action}}
        {{/each}}
    </content>
</div>
{{/inline}}

{{#*inline "action"}}
    <div class="action" data-action="{{action.slug}}">
        <div class="action-name">{{action.name}}</div>
        <div class="action-controls item-controls">
            <a class="item-control item-edit" data-tooltip="Edit Action" data-type="action" data-action="edit">
                <i class="fas fa-edit"></i>
            </a>
            <a class="item-control item-delete" data-tooltip="Delete Action" data-type="action" data-action="delete">
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </div>
{{/inline}}