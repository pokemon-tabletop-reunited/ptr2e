<form>
    <h1>Simple Move Form</h1>
    <div class="form-group">
        <label>Name</label>
        <div class="form-fields">
            {{formInput document.schema.fields.name value=document.name localize=true}}
        </div>
    </div>
    <hr />
    <div class="item-controls d-flex justify-content-end align-items-center">
        <h2 class="flex-grow-1" style="border-bottom: unset; margin: unset;">Attacks</h2>
        <a class="item-control item-create" title="Add Attack" data-type="attack" data-action="create">
            <i class="fas fa-plus-circle" style="margin-right: 3px;"></i>
            <span class="readable">{{localize "ITEM.AddButton"}}</span>
        </a>
    </div>
    {{#each document.system.actions as |action key|}}
        {{#if (is action.type "attack")}}
            <div class="attack-action" data-target="{{action.slug}}" data-index="{{@index}}">
                <div class="item-controls d-flex justify-content-end">
                    <a class="item-control item-delete" title="Delete Attack" data-type="attack" data-action="delete">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
                {{formField action.schema.fields.name value=action.name name=(concat "system.actions." @index ".name") localize=true}}
                {{!-- {{formField action.schema.fields.slug value=action.slug localize=true}} --}}
                {{formField action.schema.fields.typing value=action.typing name=(concat "system.actions." @index ".typing") localize=true}}
                {{formField action.schema.fields.category value=action.category name=(concat "system.actions." @index ".category") localize=true}}
                {{#unless (is action.category "status")}}
                    {{formField action.schema.fields.power value=action.power name=(concat "system.actions." @index ".power") localize=true}}
                {{/unless}}
                {{formField action.schema.fields.accuracy value=action.accuracy name=(concat "system.actions." @index ".accuracy") localize=true}}
            </div>
        {{/if}}
    {{/each}}
    {{#if owned}}
        <button class="item-control item-delete" title="Delete Move" data-type="move" data-action="delete">
            <i class="fas fa-trash"></i>
            <span class="readable">{{localize "ITEM.DeleteButton"}}</span>
        </button>
    {{/if}}
</form>