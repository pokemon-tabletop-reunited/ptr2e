<main {{#if undone}}class="undone" {{/if}}>
    <p>Awarded {{expBase}} to {{actorCount}} actors!</p>

    <div class="collapse-button">
        <button type="button" class="collapse-rolls">Show Modifiers</button>
    </div>
    <article class="modifiers collapse-rolls collapsed">
        {{#each modifiers}}
        <div class="circumstance-modifier">
            <span>{{label}}</span>
            <span>{{bonus}}</span>
        </div>
        {{/each}}
    </article>

    <div class="collapse-button">
        <button type="button" class="collapse-rolls">Show Actors</button>
    </div>
    <article class="awarded-to collapse-rolls collapsed">
        {{#each expAppliedActors}}
        <div class="awarded-exp">
            <img class="icon" src="{{actor.img}}" data-tooltip-direction="LEFT" data-tooltip="{{actor.name}}" />
            <span>{{old.level}} [{{old.experience}}] &rarr; {{new.level}} [{{new.experience}}] {{#if levelGain}}(Level Up! +{{levelGain}}){{/if}}</span>
        </div>
        {{/each}}
    </article>

    {{#if rollNotes}}
    <section class="notes">
        {{{rollNotes}}}
    </section>
    {{/if}}
</main>