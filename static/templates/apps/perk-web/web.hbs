<main>
  <div class="scroll">
    <section class="perk-grid {{#if editMode}}edit-mode{{/if}}" style="transform: scale({{zoom}});">
      {{#each grid as |perk|}}
        {{#if perk.name}}
          <div class="perk{{#each perk.classes}} {{this}}{{/each}}"
            data-x="{{perk.x}}"
            data-y="{{perk.y}}"
            data-tooltip="{{perk.name}}"
            style="grid-area: {{perk.x}} / {{perk.y}} / span 1 / span 1;"
          >
            <img src="{{perk.img}}" loading="lazy"/>
          </div>
        {{/if}}
      {{/each}}
    </section>
  </div>
</main>