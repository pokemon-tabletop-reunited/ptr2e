<section class="tab sheet-body {{tabs.overview.cssClass}}" data-tab="overview" data-group="sheet" {{#if folder.color}}style="--owner-folder-background: {{folder.color.css}};"{{/if}}>
    {{#each team}}
    <main {{#if this.folder.color}}style="--owner-folder-background: {{this.folder.color.css}};"{{/if}}>
        <section class="team-member" data-folder-id="{{this.folder.id}}">
            <div class="thumbnail" data-actor-id="{{this.actor.id}}">
                <img src="{{this.actor.img}}" alt="{{this.actor.name}}">
            </div>
            <main>
                <div class="title">
                    <span class="name">{{this.actor.name}}</span>
                    <span class="level">Level {{this.actor.system.advancement.level}}</span>
                </div>
                <div class="health">
                    <span>Health</span>
                    <div class="details">
                        <span class="hp">{{this.actor.system.health.value}}</span>
                        <span class="divider">/</span>
                        <span class="hp">{{this.actor.system.health.max}}</span>
                    </div>
                </div>
                <div class="pp">
                    <span>PP</span>
                    <div class="details">
                        <span class="pp">{{this.actor.system.powerPoints.value}}</span>
                        <span class="divider">/</span>
                        <span class="pp">{{this.actor.system.powerPoints.max}}</span>
                    </div>
                </div>
            </main>
            <aside>
                {{#each this.party}}
                <section class="party-member" data-actor-id="{{this.id}}">
                    <div class="thumbnail">
                        <img src="{{this.img}}" alt="{{this.name}}" data-tooltip="{{this.name}}" data-uuid="{{this.uuid}}">
                    </div>
                </section>
                {{/each}}
            </aside>
        </section>
    </main>
    {{/each}}
</section>